{% extends '@layout/default.html.twig' %}

{% block title %}Todays Totals{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1>
            Todays Totals
        </h1>

        <h4><strong>Total Premium:</strong> &pound;{{ totalPremium }}</h4>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <th>Customer Name</th>
                    <th>Car Make</th>
                    <th>Car Model</th>
                    <th>Premium</th>
                    <th>Additional Premium</th>
                </thead>
                <tbody>
                    {% for quote in quotes %}
                    <tr>
                        <td>{{ quote.customerName }}</td>
                        <td>{{ quote.carMake }}</td>
                        <td>{{ quote.carModel }}</td>
                        <td>{{ quote.premium }}</td>
                        <td>{{ quote.additionalPremium }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
